<div class="container">
  <div class="row">
    <h1><%= @program.name%> program</h1>
    <div class="col-lg-4">
      <div class="card mb-4 mt-2">
        <div class="card-body text-center">
          <%= cl_image_tag @program.user.profile_picture.key, :transformation=>[{gravity: 'head', :crop=>"crop"}, {:height=>150, :width=>150, :crop=>"fill"}],
          class: 'rounded-circle img-fluid' %>
          <h5 class="my-3">Teached by <span><%= link_to user_profile_path(@program.user) do %>
            <%= @program.user.first_name %>
            <% end %></span>
          </h5>
        </div>
      </div>
      <div class="card mb-4 mb-lg-0">
        <div class="card-body p-0">
          <ul class="list-group list-group-flush rounded-3">
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.discipline %></p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.level %></p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.target %></p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.duration %> month</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.price %> â‚¬</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0"><%= @program.language %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="card mb-4 mt-2">
        <div id="carouselExampleControlsNoTouching" class="carousel slide carousel-fade" data-bs-touch="false" data-bs-interval="true" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% @program.medias.each_with_index do |media, i| %>
              <% if media == @program.medias.first %>
                <button type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide-to="0" data-bs-interval="6000" class="active" aria-current="true" aria-label="Slide 1"></button>
              <% else %>
                <button type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide-to="<%= i %>" data-bs-interval="6000" aria-label="Slide <%= i+1 %>"></button>
              <% end %>
            <% end %>
          </div>
          <div class="carousel-inner">
            <% @program.medias.each do |media| %>
              <% if media == @program.medias.first %>
                <div class="carousel-item active" data-bs-interval="6000">
                  <%= cl_image_tag media.key, :width=>1000, :height=>500, :gravity=>"auto", :crop=>"fill", :background=>"white", class: 'd-block w-100', data: 'color: lightblue' %>
                </div>
                <% else %>
                <div class="carousel-item" data-bs-interval="6000">
                  <%= cl_image_tag media.key, :width=>1000, :height=>500, :gravity=>"auto", :crop=>"fill",  :background=>"white", class: 'd-block w-100', data: 'color: lightblue' %>
                </div>
              <% end %>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Description</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @program.description %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Lessons</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">
                <div data-controller="insert-in-list">
                  <div data-insert-in-list-target="items">
                    <% @program.lessons.each do |lesson| %>
                      <p>Lesson <%= lesson.number %>: <strong><%= lesson.title %></strong></p>
                    <% end %>
                  </div>
                  <% if current_user == @program.user %>
                    <div class="container">
                      <div class="row">
                        <div class="col-10">
                          <br>
                          <h4>Add more lessons:</h4>
                          <%= simple_form_for([@program, @lesson], data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" }) do |f| %>
                            <%= f.input :title, class: 'form-control' %>
                            <%= f.input :description, class: 'form-control' %>
                            <%= f.button :submit, class: "btn btn-danger" %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Batches</p>
            </div>
            <div class="col-sm-9">
              <% @program.batches.each do |batch| %>
                <div class="row">
                  <div class="col-8">
                    <%= batch.start_time.strftime("%A, %b %e, %Y") %> -> <%= batch.end_time.strftime("%A, %b %e, %Y") %>
                  </div>
                  <div class="col-1"></div>
                  <div class="col-3">
                    <%= link_to '=> Register!', program_batch_path(@program.id, batch.id) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
