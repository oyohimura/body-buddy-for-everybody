<div class="card-dashboard">
  <div class="latest">
    <%= cl_image_tag program.medias.first.key %>
    <div class="more-info">
      <%= link_to new_program_batch_path(program) do%>
        <button class="button_plus"></button>
      <% end %>
    </div>
    <div class="card-dashboard-infos">
      <div class="card-dashboard-infos-desc">
        <h2><%= program.name %></h2>
        <% if program.batches.length != 0  %>
          <strong><h5 style="padding-left: 4px;"><%= pluralize program.batches.count, 'batch' %> :</h5></strong>

        <%# <div class="scroll"> %>
          <ul style="list-style: none;">
            <% program.batches.each do |batch|%>
              <%= link_to program_batch_path(program, batch) do %>
                <li>#<%= batch.id %> - <%= link_to batch_students_path(batch) do %>
                  <i class='fa-solid fa-person-half-dress'></i> <%= batch.users.count %> / <%= batch.max_students %>
                <% end %></li>
              <% end %>
            <% end %>
          </ul>
        <%# </div> %>
        <% else %>
          <strong><h5><%= link_to "You have no batch yet", new_program_batch_path(program) %></h5></strong>
        <% end %>
      </div>
    </div>
    <div class="edit">
      <%= link_to edit_program_path(program) do %>
        <i class="fa-solid fa-pen"></i>
      <% end %>
    </div>
    <div class="addlesson">
      <%= link_to 'Program details', program_path(program) %>
    </div>
    <div class="delete">
      <%= link_to program_path(program), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this program?" }, class: "ms-3" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
