<div class="container">
  <h2>Info about batch #<%= @batch.id %></h2>
  <p>Starts at : <%= @batch.start_time.strftime("at %I:%M%p on %d/%m/%Y") %></p>
  <p>Ends at : <%= @batch.end_time.strftime("at %I:%M%p on %d/%m/%Y") %></p>
  <p>Maximum number of students : <%= @batch.max_students %></p>
  <% @user = User.new() %>
  <% if current_user.batch == @batch %>
    <p><span class="text-blue">You are registered to this batch.</span></p>
  <% else %>
    <%= simple_form_for @user, method: :post, url: batch_students_path(@batch), data: { turbo: false } do |f| %>
      <%= f.hidden_field :batch, value: @batch.id %>
      <%= f.submit 'Register to this batch', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
  <%= link_to "Back to all batches for selected program", program_batches_path(@batch.program) %>
</div>
