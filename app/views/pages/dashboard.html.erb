<div class="container">
  <h2>My programs:</h2>
  <% if current_user.teacher? %>
    <% @programs.each do |program| %>
      <%= link_to program_path(program) do %>
        <p><%= program.name %></p>
      <% end %>
    <% end %>
  <% end %>
  <%= link_to 'Create a new program', new_program_path %>

  <h2>My current registrations:</h2>
  <% if current_user.batch.nil? %>
    <p>You are not registered yet. You can <%= link_to "browse programs", programs_path %></p>
  <% else %>
    <p>Batch number <%= @batch.id %> of "<%= @batch.program.name %>" program.
    => <%= link_to "[See batch info]", program_batch_path(@batch.program, @batch) %>
    - <%= link_to "[See batch participants]", batch_students_path(@batch) %></p>
  <% end %>
</div>
